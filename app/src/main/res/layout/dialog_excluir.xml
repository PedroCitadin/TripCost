<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">

    <TextView
        android:fontFamily="@font/roboto"
        android:layout_marginTop="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deseja excluir essa viagem?"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <LinearLayout
        android:gravity="center_horizontal"
        android:paddingTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnConfirmarExclusao"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Excluir"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/borda_fundo"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/btnCancelarExclusao"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Cancelar"
            android:background="@drawable/borda_semfundo"
            android:textColor="@color/yaleblue"/>

    </LinearLayout>
</LinearLayout>