<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:background="@color/vermelhoBack"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Viagem"
                android:textColor="@color/branco"
                android:textSize="25sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView

                            android:fontFamily="@font/roboto_negrito"
                            android:layout_marginStart="35dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="Titulo: "
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:layout_marginTop="10dp"/>
                        <EditText
                            android:layout_width="300dp"
                            android:fontFamily="@font/roboto"
                            android:layout_marginStart="35dp"
                            android:inputType="text"
                            android:layout_height="wrap_content"
                            android:id="@+id/txtEditTitulo"
                            android:text="Titulo: "
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:layout_marginTop="2dp"/>
                        <TextView

                            android:fontFamily="@font/roboto_negrito"
                            android:layout_marginStart="35dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="Número de viajantes: "
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:layout_marginTop="10dp"/>
                        <EditText
                            android:layout_width="300dp"
                            android:inputType="number"
                            android:fontFamily="@font/roboto"
                            android:layout_marginStart="35dp"

                            android:layout_height="wrap_content"
                            android:id="@+id/txtEditNumViajantes"
                            android:text="Titulo: "
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:layout_marginTop="2dp"/>
                        <TextView

                            android:fontFamily="@font/roboto_negrito"
                            android:layout_marginStart="35dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="Duração da viagem: "
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:layout_marginTop="10dp"/>
                        <EditText
                            android:inputType="number"
                            android:fontFamily="@font/roboto"
                            android:layout_marginStart="35dp"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/txtEditDuracaoViagem"
                            android:text="Titulo: "
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="2dp"/>

                    </LinearLayout>
                    <LinearLayout

                        android:id="@+id/llEditGasolina"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView

                            android:fontFamily="@font/roboto"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="Combustivel"
                            android:textColor="@color/cinzafont"
                            android:textSize="20sp"
                            android:layout_marginTop="10dp"/>
                        <TextView

                            android:fontFamily="@font/roboto_negrito"
                            android:layout_marginStart="35dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="Distancia da viagem: "
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:layout_marginTop="10dp"/>
                        <EditText
                            android:id="@+id/txtEditDistanciaViagem"
                            android:fontFamily="@font/roboto"
                            android:layout_marginStart="35dp"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:text="Titulo: "
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:layout_marginTop="2dp"/>
                        <TextView

                            android:fontFamily="@font/roboto_negrito"
                            android:layout_marginStart="35dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="Média de quilometros por litro: "
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:layout_marginTop="10dp"/>
                        <EditText
                            android:id="@+id/txtEditKmporLitro"
                            android:fontFamily="@font/roboto"
                            android:layout_marginStart="35dp"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:text="Titulo: "
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:layout_marginTop="2dp"/>
                        <TextView

                            android:fontFamily="@font/roboto_negrito"
                            android:layout_marginStart="35dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="Custo médio por litro: "
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:layout_marginTop="10dp"/>
                        <EditText
                            android:id="@+id/txtEditCustoLitro"
                            android:fontFamily="@font/roboto"
                            android:layout_marginStart="35dp"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:text="Titulo: "
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:layout_marginTop="2dp"/>
                        <TextView

                            android:fontFamily="@font/roboto_negrito"
                            android:layout_marginStart="35dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="Total de veículos: "
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:layout_marginTop="10dp"/>
                        <EditText
                            android:id="@+id/txtEditTotVeiculos"
                            android:fontFamily="@font/roboto"
                            android:layout_marginStart="35dp"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:text="Titulo: "
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="2dp"/>

                    </LinearLayout>
                    <LinearLayout

                        android:id="@+id/llEditTarifaAerea"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView

                            android:fontFamily="@font/roboto"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="Tarifa Aérea"
                            android:textColor="@color/cinzafont"
                            android:textSize="20sp"
                            android:layout_marginTop="10dp"/>
                        <TextView

                            android:fontFamily="@font/roboto_negrito"
                            android:layout_marginStart="35dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="Custo por pessoa: "
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:layout_marginTop="10dp"/>
                        <EditText
                            android:id="@+id/txtEditCustoPessoaTarifa"
                            android:fontFamily="@font/roboto"
                            android:layout_marginStart="35dp"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:text="Titulo: "
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:layout_marginTop="2dp"/>
                        <TextView

                            android:fontFamily="@font/roboto_negrito"
                            android:layout_marginStart="35dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="Aluguel de veículo: "
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:layout_marginTop="10dp"/>
                        <EditText
                            android:id="@+id/txtEditAluguelVeiculo"
                            android:fontFamily="@font/roboto"
                            android:layout_marginStart="35dp"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:text="Titulo: "
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="10dp"/>


                    </LinearLayout>
                    <LinearLayout

                        android:id="@+id/llEditHospedagem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView

                            android:fontFamily="@font/roboto"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="Hospedagem"
                            android:textColor="@color/cinzafont"
                            android:textSize="20sp"
                            android:layout_marginTop="10dp"/>
                        <TextView

                            android:fontFamily="@font/roboto_negrito"
                            android:layout_marginStart="35dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="Custo por noite: "
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:layout_marginTop="10dp"/>
                        <EditText
                            android:id="@+id/txtEditCustoPorNoite"
                            android:fontFamily="@font/roboto"
                            android:layout_marginStart="35dp"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:text="Titulo: "
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:layout_marginTop="2dp"/>
                        <TextView

                            android:fontFamily="@font/roboto_negrito"
                            android:layout_marginStart="35dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="Total de noites: "
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:layout_marginTop="10dp"/>
                        <EditText
                            android:id="@+id/txtEditTotNoites"
                            android:fontFamily="@font/roboto"
                            android:layout_marginStart="35dp"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:text="Titulo: "
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:layout_marginTop="2dp"/>
                        <TextView

                            android:fontFamily="@font/roboto_negrito"
                            android:layout_marginStart="35dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="Total de quartos: "
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:layout_marginTop="10dp"/>
                        <EditText
                            android:id="@+id/txtEditTotQuartos"
                            android:fontFamily="@font/roboto"
                            android:layout_marginStart="35dp"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:text="Titulo: "
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="2dp"/>


                    </LinearLayout>
                    <LinearLayout

                        android:id="@+id/llEditRefeicoes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView

                            android:fontFamily="@font/roboto"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="Alimentação"
                            android:textColor="@color/cinzafont"
                            android:textSize="20sp"
                            android:layout_marginTop="10dp"/>
                        <TextView

                            android:fontFamily="@font/roboto_negrito"
                            android:layout_marginStart="35dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="Custo por refeição: "
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:layout_marginTop="10dp"/>
                        <EditText
                            android:id="@+id/txtEditCustoRefeicao"
                            android:fontFamily="@font/roboto"
                            android:layout_marginStart="35dp"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:text="Titulo: "
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:layout_marginTop="2dp"/>
                        <TextView

                            android:fontFamily="@font/roboto_negrito"
                            android:layout_marginStart="35dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:text="Número de refeições por dia: "
                            android:textColor="@color/black"
                            android:textSize="18sp"

                            android:layout_marginTop="10dp"/>
                        <EditText
                            android:id="@+id/txtEditRefeicoesDia"
                            android:fontFamily="@font/roboto"
                            android:layout_marginStart="35dp"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:text="Titulo: "
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:layout_marginTop="2dp"/>


                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/llEditEntretenimento"
                        android:layout_width="match_parent"
                        android:layout_height="400dp"
                        android:orientation="vertical">
                        <TextView

                            android:fontFamily="@font/roboto"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="Outros gastos"
                            android:textColor="@color/cinzafont"
                            android:textSize="20sp"
                            android:layout_marginTop="10dp"/>


                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="180dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <ListView
                                    android:layout_width="match_parent"
                                    android:layout_height="180dp"
                                    android:id="@+id/lista_gastos"/>
                            </LinearLayout>
                        </ScrollView>
                        <Button
                            android:id="@+id/btnAddEditAtividade"
                            android:fontFamily="@font/roboto"
                            android:layout_width="300dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="5dp"
                            android:layout_gravity="center"
                            android:backgroundTint="@color/vermelhoBack"
                            android:text="Adicionar"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_height="wrap_content">
                        <Button
                            android:id="@+id/btnCancelarEditar"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="Cancelar"/>
                        <View
                            android:layout_width="10dp"
                            android:layout_height="wrap_content"/>
                        <Button
                            android:id="@+id/btnSalvarViagem"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="Salvar"/>
                    </LinearLayout>

                </LinearLayout>
            </ScrollView>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>