<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:adjustViewBounds="true"
            android:src="@drawable/logo"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp" />

        <EditText
            android:id="@+id/txtNome"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="5dp"
            android:inputType="text"
            android:fontFamily="@font/roboto"
            android:hint="@string/hintNome"
            tools:ignore="Autofill"
            android:background="@drawable/borda_input"
            android:paddingLeft="25dip"/>

        <EditText
            android:id="@+id/txtCpf"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="5dp"
            android:inputType="number"
            android:fontFamily="@font/roboto"
            android:hint="@string/hintCpf"
            tools:ignore="Autofill"
            android:background="@drawable/borda_input"
            android:paddingLeft="25dip"/>

        <EditText
            android:id="@+id/txtEmail"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="5dp"
            android:inputType="text"
            android:fontFamily="@font/roboto"
            android:hint="@string/hintEmail"
            tools:ignore="Autofill"
            android:background="@drawable/borda_input"
            android:paddingLeft="25dip"/>

        <EditText
            android:id="@+id/txtTelefone"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="5dp"
            android:inputType="number"
            android:fontFamily="@font/roboto"
            android:hint="@string/hintTelefone"
            tools:ignore="Autofill"
            android:background="@drawable/borda_input"
            android:paddingLeft="25dip"/>

        <EditText
            android:id="@+id/txtSenha"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="5dp"
            android:inputType="textPassword"
            android:fontFamily="@font/roboto"
            android:hint="@string/hintSenha"
            tools:ignore="Autofill"
            android:background="@drawable/borda_input"
            android:paddingLeft="25dip"/>

        <EditText
            android:id="@+id/txtConfirmaSenha"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="15dp"
            android:inputType="textPassword"
            android:fontFamily="@font/roboto"
            android:hint="@string/hintConfirmaSenhaString"
            tools:ignore="Autofill"
            android:background="@drawable/borda_input"
            android:paddingLeft="25dip"/>

        <Button
            android:id="@+id/btnFinalizarCadastro"
            android:fontFamily="@font/roboto"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:text="@string/btnFinalizarString"
            android:background="@drawable/borda_fundo"
            android:textColor="@color/white" />

        <Button
            android:fontFamily="@font/roboto"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:id="@+id/btnCancelar"
            android:textColor="@color/yaleblue"
            android:text="@string/btnCancelarString"
            android:background="@drawable/borda_semfundo"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>