<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center_horizontal"
    android:layout_width="350dp"
    android:layout_height="240dp"
    android:orientation="vertical"
    android:gravity="center_horizontal">
    <TextView
        android:fontFamily="@font/roboto"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Deseja excluir esse gasto?"
        android:textColor="@color/black"
        android:textSize="20sp"
        />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


    <TextView
        android:fontFamily="@font/roboto"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:text="Gasto: "
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_marginTop="10dp"

        />
    <EditText

        android:id="@+id/txtEditDescricaoAtividade"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:inputType="text"
        android:fontFamily="@font/roboto"
        android:hint="Insira a atividade desejada"
        android:layout_marginTop="2dp"
        />
    <TextView
        android:fontFamily="@font/roboto"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:text="Valor: "
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_marginTop="10dp"

        />
    <EditText

        android:id="@+id/txtEditValorAtividade"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:inputType="numberDecimal"
        android:fontFamily="@font/roboto"
        android:hint="Insira o valor da atividade desejada"
        android:layout_marginTop="2dp"
       />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnCancelarAddAtividade"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Cancelar"/>
        <View
            android:layout_width="10dp"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btnSalvarAtividade"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Salvar"/>
    </LinearLayout>
    </LinearLayout>



