<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <TextView
        android:fontFamily="@font/roboto"
        android:layout_marginTop="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deseja excluir esse gasto?"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp">

    <TextView
        android:fontFamily="@font/roboto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:text="Gasto: "
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_marginTop="10dp" />

    <EditText
        android:id="@+id/txtEditDescricaoAtividade"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:inputType="text"
        android:fontFamily="@font/roboto"
        android:hint="Insira a atividade desejada"
        android:layout_marginTop="5dp"
        android:paddingLeft="25dip"
        android:background="@drawable/borda_input"/>

    <TextView
        android:fontFamily="@font/roboto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:text="Valor: "
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_marginTop="20dp" />

    <EditText
        android:id="@+id/txtEditValorAtividade"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:inputType="numberDecimal"
        android:fontFamily="@font/roboto"
        android:hint="Insira o valor da atividade desejada"
        android:layout_marginTop="5dp"
        android:paddingLeft="25dip"
        android:background="@drawable/borda_input"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingTop="25dp"
        android:gravity="center">

        <Button
            android:id="@+id/btnCancelarAddAtividade"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="Cancelar"
            android:background="@drawable/borda_semfundo"
            android:textColor="@color/yaleblue"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/btnSalvarAtividade"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="Salvar"
            android:background="@drawable/borda_fundo"
            android:textColor="@color/white"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"/>

    </LinearLayout>
    </LinearLayout>



